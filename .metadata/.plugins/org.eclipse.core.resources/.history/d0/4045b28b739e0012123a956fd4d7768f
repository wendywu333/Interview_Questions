public class Longest_Consecutive_Sequence {

	public int longestConsecutive(int[] num) {

		int max = 0;

		ArrayList<Integer> a = new ArrayList<Integer>();

		for (int n : num) {
			a.add(n);
		}

		Collections.sort(a);

		for (int i = 0; i < a.size() - 1; i++) {
			if (a.get(i + 1) == a.get(i) + 1) {
				max++;
			} else if (a.get(i + 1) == a.get(i)) {

			} else {

			}
		}

		return max;
	}

}
