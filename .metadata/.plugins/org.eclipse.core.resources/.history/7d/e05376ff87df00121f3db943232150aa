package LeetCode;

/**
 * @author Wenzhe
 * @date 6/26/2013
 * 
 */
public class Interleaving_String {

	public boolean isInterleave(String s1, String s2, String s3) {
		// Start typing your Java solution below
		// DO NOT write main() function
		if (s1.length() + s2.length() != s3.length())
			return false;
		if (s1.length() == 0 || s2.length() == 0) {
			if (s3.equals(s1) || s3.equals(s2))
				return true;
			else
				return false;
		}
		// initialize the array
		boolean[][] match = new boolean[s1.length()][s2.length()];
		match[0][0] = true;
		if (s3.charAt(1) == s1.charAt(1))
			match[1][0] = true;
		for (int i = 2; i < s1.length(); i++) {
			match[i][0] = match[i - 1][0] || (s3.charAt(i) == s1.charAt(i));
		}

		if (s3.charAt(1) == s2.charAt(1))
			match[0][1] = true;
		for (int i = 2; i < s1.length(); i++) {
			match[0][i] = match[0][i - 1] || (s3.charAt(i) == s2.charAt(i));
		}

		return match[s1.length() - 1][s2.length() - 1];

	}

}
