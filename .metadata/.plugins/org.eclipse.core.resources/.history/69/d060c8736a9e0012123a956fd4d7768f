 */
public class Binary_Tree_Maximum_Path_Sum {

	public int max = 0;

	public int maxPathSum(TreeNode root) {

		int[] res = dfs(root);
		return res[0];
	}

	public int[] dfs(TreeNode root) {

		int[] res = new int[2];
		if (root == null) {
			res[0] = 0;
			res[1] = 0;
			return res;
		}
		int[] l = dfs(root.left);
		int[] r = dfs(root.right);
		int m = Math.max(l[0], r[0]);
		int v = root.val;

		if (l[1] == 1 && r[1] == 1) {

		} else if (l[1] == 0 && r[1] == 0) {

			if (v >= m) {
				res[0] = v;
				res[1] = 1;
			} else {
				res[0] = m;
				res[1] = 0;
			}

		} else if (l[1] == 1 && r[1] == 0) {

		} else {

		}

		return res;

	}
}
