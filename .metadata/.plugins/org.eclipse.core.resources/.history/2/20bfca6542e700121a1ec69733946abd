package LeetCode;

import java.util.ArrayList;

/**
 * @author Wenzhe
 * @date Jul 7, 2013
 * 
 */
public class Insert_Interval {

	// Given a set of non-overlapping intervals, insert a new interval into the
	// intervals (merge if necessary).
	// You may assume that the intervals were initially sorted according to
	// their start times.

	public ArrayList<Interval> insert(ArrayList<Interval> intervals,
			Interval newInterval) {

		int start = -1, end = -1;

		ArrayList<Interval> res = new ArrayList<Interval>();

		for (Interval i : intervals) {
			if (i.start <= newInterval.start)
				start = intervals.indexOf(i);
			if (i.start >= newInterval.end) {
				end = intervals.indexOf(i);
				break;
			}
		}
		if (start == -1 && end == -1) {
			res.add(newInterval);
			return res;
		}
		if (start == -1) {
			res.add(new Interval(newInterval.start, intervals.get(end).end));
			for (int m = end + 1; m < intervals.size(); end++)
				res.add(intervals.get(m));
		}

		return null;

	}

}
