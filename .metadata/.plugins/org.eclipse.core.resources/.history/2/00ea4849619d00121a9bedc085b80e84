package LeetCode;

/**
 * @author Wenzhe
 * @date 4/4/2013
 *
 */
public class Sort_Colors {
	
	public void sortColors(int[] A) {
        
	int lPtr = 0;
	int rPtr = A.length-1;
	int current = 0;
	while(current < rPtr){
		if(A[current] ==1){
			current++;
		}
		else if(A[current] == 0){
			A[lPtr++] = 0;
		}
		else{
			A[rPtr--] = 2;
		}
	}
	
	for(current = lPtr; current <= rPtr; current++){
		A[current] = 1;
	}
        
    }

}
