package LeetCode;

import java.util.ArrayList;
import java.util.HashMap;

/**
 * @author Wenzhe
 * @date 6/26/2013
 * 
 * 
 * 
 */
public class Letter_Combinations_of_a_Phone_Number {

	public ArrayList<String> letterCombinations(String digits) {

		if (digits == null)
			return null;

		ArrayList<String> comb = new ArrayList<String>();
		HashMap<Character, char[]> dMap = new HashMap<Character, char[]>();

		// important: declare and initialize char array
		dMap.put('2', new char[] { 'a', 'b', 'c' });
		dMap.put('3', new char[] { 'd', 'e', 'f' });
		dMap.put('4', new char[] { 'g', 'h', 'i' });
		dMap.put('5', new char[] { 'j', 'k', 'l' });
		dMap.put('6', new char[] { 'm', 'n', 'o' });
		dMap.put('7', new char[] { 'p', 'q', 'r', 's' });
		dMap.put('8', new char[] { 't', 'u', 'v' });
		dMap.put('9', new char[] { 'w', 'x', 'y', 'z' });

		return comb;

	}

}
