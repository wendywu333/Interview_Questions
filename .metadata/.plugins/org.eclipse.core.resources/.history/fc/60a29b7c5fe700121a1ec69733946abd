public class Length_of_Last_Word {

	public int lengthOfLastWord(String s) {
		// Start typing your Java solution below
		// DO NOT write main() function
		int res = 0;

		for (int i = s.length() - 1; i >= 0; i--) {
			if (s.charAt(i) != ' ')
				res++;
			else if (s.charAt(i) == ' ' && i != s.length() - 1)
				return res;
			else {

			}
		}

		return res;

	}

}
