package LeetCode;

/**
 * @author Wenzhe
 * @date 6/26/2013
 * 
 */
public class Search_Insert_Position {

	public int searchInsert(int[] A, int target) {

		if (A.length == 0)
			return 0;

		int result = search(A, 0, A.length - 1, target);

		return result;

	}

	private int search(int[] a, int i, int j, int target) {
		// TODO Auto-generated method stub
		if (i == j && a[i] == target)
			return i;
		if (i == j && a[i] > target) {
			return i > 0 ? i - 1 : 0;
		}
		if (i == j && a[i] < target) {
			return j + 1;
		}

		if (target == a[(j - i) / 2])
			return (j - i) / 2;
		if (target < a[(j - i) / 2]) {
			return search(a, i, i + (j - i) / 2, target);
		} else {
			return search(a, i + (j - i) / 2 + 1, j, target);
		}

	}

}
