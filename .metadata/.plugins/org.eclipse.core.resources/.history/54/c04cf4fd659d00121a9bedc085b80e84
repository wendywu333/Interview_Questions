package LeetCode;

/**
 * @author Wenzhe
 * @date 4/4/2013
 * 
 */
public class Sort_Colors {

	public void sortColors(int[] A) {

		int lPtr = 0;
		int rPtr = A.length - 1;
		int current = 0;
		while (current < rPtr) {
			if (A[current] == 1) {
				current++;
			} else if (A[current] == 0) {
				swap(A[lPtr], A[current]);
				lPtr++;
			} else {
				swap(A[rPtr], A[current]);
				rPtr--;
			}
		}

	}

	private void swap(int i, int j) {
		// TODO Auto-generated method stub
		int temp = i;
		i = j;
		j = temp;

	}

}
