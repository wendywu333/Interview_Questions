package LeetCode;

/**
 * @author Wenzhe
 * @date 4/4/2013
 * 
 */
public class Sort_Colors {

	public void sortColors(int[] A) {

		int lPtr = 0;
		int rPtr = A.length - 1;
		int current = 0;
		while (current <= rPtr && lPtr < A.length && rPtr >= 0) {
			if (A[current] == 1) {
				current++;
			} else if (A[current] == 0) {
				int temp = A[lPtr];
				A[lPtr] = A[current];
				A[current] = temp;
				lPtr++;
			} else {
				int temp = A[rPtr];
				A[rPtr] = A[current];
				A[current] = temp;
				rPtr--;
			}
		}

	}

}
