package LeetCode;

/**
 * @author Wenzhe
 * @date Jul 3, 2013
 * 
 */
public class Reverse_Linked_List_II {

	public ListNode reverseBetween(ListNode head, int m, int n) {
		// Start typing your Java solution below
		// DO NOT write main() function

		if (m == n)
			return head;
		ListNode cur = head;
		int pos = 1;
		while (pos < m - 1) {
			cur = cur.next;
			pos++;
		}
		ListNode last = cur;
		ListNode temp2 = last.next;
		cur = cur.next.next;
		pos = pos + 2;
		ListNode temp;
		while (pos <= m) {

			temp = cur.next;
			cur.next = last.next;
			last.next = cur;
			cur = temp;
			pos++;
		}

		temp2.next = cur;

		return head;

	}
}
