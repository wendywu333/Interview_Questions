package LeetCode;

/**
 * @author Wenzhe
 * @date Jul 7, 2013
 * 
 */
public class Pow_x_n {

	public double pow(double x, int n) {
		// Start typing your Java solution below
		// DO NOT write main() function
		if (n == 0)
			return 1;
		if (n < 0)
			return 1.0 / pow(x, -n);

		double a = pow(x, n / 2);

		if (n % 2 == 0)
			return a * a;
		else
			return a * a * x;

	}

	public static void main(String args[]) {
		(new Pow_x_n()).pow(0.00000, 1);
	}

}
